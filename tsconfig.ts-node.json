{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "es2019",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": false,
        "experimentalSpecifierResolution": "node"
    }
}