# Aura OS Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED: OpenAI Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# OPTIONAL: Supabase Configuration
# (Uses local memory if not set)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# OPTIONAL: Twilio (WhatsApp/SMS)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ============================================
# OPTIONAL: Stripe (Payments)
# ============================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ============================================
# OPTIONAL: Google Calendar API
# ============================================
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
GOOGLE_CALENDAR_ID=your_calendar_id

# ============================================
# Application Settings
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# PHASE 6: ULTIMATE HARDENING
# ============================================
# 32 characters long random string
ENCRYPTION_SECRET_KEY=your_encryption_secret_key_here
# Random string for digital signatures
LOG_SIGNING_SECRET=your_log_signing_secret_here
# Database persistence secret
DATABASE_ACCESS_KEY=your_db_access_key
